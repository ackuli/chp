@model HMS.Entities.Models.QuizQuestionAnswer

@{
    ViewBag.Title = "Quiz Question Answer Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {

    });


</script>

@section breadcrumb
{
    <li><a href="~/Dashboard/index">Dashboard</a></li>
    <li>Question</li>
    <li class="active">Quiz Question Answer Edit</li>
}

<style type="text/css">
    input, select, textarea {
        max-width: 100%;
    }

    .backTolist {
        font-size: 1em;
        font-weight: normal;
    }

        .backTolist:hover {
            text-decoration: none;
        }

    .fileSets {
        border: 1px dotted #ddd;
        margin: 0px 10px 20px 0;
        padding: 20px 10px 0px 10px;
    }

    .required:after {
        content: " *";
        color: #f00;
    }

    legend.scheduler-border {
        width: inherit; /* Or auto */
        padding: 0 10px; /* To give a bit of padding on the left and right */
        border-bottom: none;
    }
</style>
<p> @Html.ActionLink("Go Quiz Question Answer List", "Index", new { questionId = @Model.QuestionId }, new { @class = "btn btn-success" })</p>
<hr />

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(x => x.QuestionId)
    @Html.HiddenFor(x => x.Id)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="panel panel-info">

        <div class="panel-heading">
            @ViewBag.Title.ToString()

        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-sm-8">
                    <fieldset class="fileSets">
                        <legend class="scheduler-border">Question Details Info</legend>
                        <div class="form-group">

                            @Html.LabelFor(model => model.QuestionId, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.QuestionId)

                            </div>
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(model => model.AnswerChoiceId, new { @class = "col-sm-4 control-label required" })
                            <div class="col-sm-8">
                                @Html.DropDownListFor(model => model.AnswerChoiceId, new SelectList(Model.kvpAnswerChoice, "Key", "Value", Model.AnswerChoiceId), "Select Answer Choice", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AnswerChoiceId)
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="checkbox" class="col-sm-4 control-label"></label>
                            <div class="col-sm-8">
                                <div class="checkbox block">
                                    <label>
                                        @Html.CheckBoxFor(model => model.IsActive) @Html.LabelFor(model => model.IsActive)
                                    </label>
                                </div>
                            </div>
                        </div>


                    </fieldset>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="btn-toolbar">
                        <input type="submit" value="Update" class="btn-primary btn" onclick=" return AddConfirm()" />
                    </div>
                </div>
            </div>


        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
