@model HMS.Entities.Models.UserAccount
@{
    ViewBag.Title = "User Info Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section breadcrumb
{
   <li><a href="~/Home/index">Dashboard</a></li>
    <li><a href="~/User/Index">Users</a></li>   
    <li class="active">@ViewBag.Title</li>
}

<script type="text/javascript">
    $(document).ready(function () {
        //$("#page-leftbar li").removeClass("active");
        //$("#liAdmin").addClass("active open");
        //$('#liAdmin .acc-menu').css('display', 'block');
        //$('#liAdmin .acc-menu').collapse('show');
    });
</script>
@section title
{
    @ViewBag.Title
}
@Html.ActionLink("Back to List", "Index")
<hr />

@using (Html.BeginForm("UserCreate", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.UserAccountsId, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.UserAccountsId, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserAccountsId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
              
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmailId, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmailId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PhoneNo, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PhoneNo)
            </div>
        </div>
        <div class="form-group">
            <label for="checkbox" class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
                <div class="checkbox block">
                    <label>
                        @Html.CheckBoxFor(model => model.IsTermConditionAgreed) @Html.LabelFor(model => model.IsTermConditionAgreed)
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UserDescription, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.UserDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserDescription)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RoleId, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.DropDownListFor(model => model.RoleId, new SelectList(Model.roleList, "Key", "Value", Model.RoleId), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoleId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ClientId, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.DropDownListFor(model => model.ClientId, new SelectList(Model.clientList, "Key", "Value", Model.ClientId), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClientId)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="btn-toolbar">
                <input type="submit" value="Create" class="btn-primary btn" onclick=" return AddConfirm()" />
            </div>
        </div>
    </div>
}

@section Scripts {
@Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
}
