@using MvcPaging
@model  IEnumerable<HMS.Entities.Models.Client>
@{
    ViewBag.Title = "Agent Info List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .form-inline .form-control {
        width: 100%;
    }

    .form-inline input {
        max-width: 100%;
        width: 100%;
    }

    .form-inline .form-group {
        width: 70%;
    }

    .margin {
        margin-top: 0px;
        margin-bottom: 0px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $("#page-leftbar li").removeClass("active");
        $("#liAdmin").addClass("active");
    });
</script>

@section breadcrumb
{
    <li><a href="~/Home/index">Dashboard</a></li>
<li><a href="~/Client/ClientList">Agent</a></li>
<li class="active">@ViewBag.Title</li>
}
@section title
{
    @ViewBag.Title
}


@using (Html.BeginForm("PackagesInfoCreate", "PackagesInfo", FormMethod.Get))
{

    <div class="row margin">
        @*<div class="col-md-6">
            @Html.ActionLink("Create New", "ClientCreate")
        </div>*@
        <div class="form-inline col-md-6" style="margin-bottom: 20px">

            <div class="form-group">
                <input type="text" class="form-control " id="searchItem" name="searchItem" placeholder="Search" value="@ViewData["searchItem"]">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>

    <table class="table">


        <tr>

            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Website)
            </th>
           
            <th></th>
        </tr>
        @foreach (var item in Model.ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
             
                <td>
                    @Html.ActionLink("Edit", "Editclient", "Client", new { id = item.ClientId }, null) |                   
                    @Html.ActionLink("Details", "Details", new { id = item.ClientId }) |
                    @Html.ActionLink("Delete", "Delete", "Client", new { id = item.ClientId }, null)
                </td>
            </tr>
        }

    </table>
    <hr />
