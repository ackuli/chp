@model IEnumerable<HMS.Models.Advertise>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_CompareHajj.Layout.Admin.cshtml";
}



<p>
   Advertise List   @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        <th>
            Position
        </th>
        <th>
            Duration
        </th>
        <th>
            Active
        </th>
        
        <th>
            Default
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        
        <th>
            Contact
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Fk_AdvertisePosition.Name)
        </td>
       
        <td>
            @item.ToDate.ToString("dd-MMM-yyyy") to @item.ToDate.ToString("dd-MMM-yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDefault)
        </td>
        <td>
            
            
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
