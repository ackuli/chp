@model HMS.Entities.Models.Event
@{
    ViewBag.Title = "Hajj Event Details";
    Layout = "~/Views/shared/_LayoutPage.cshtml";
}
<style type="text/css">


    #btnnewsevent {
        background-color: #D95902 !important;
    }
    .Footercontent {
        width: 90%;
        margin-left: auto;
        margin-right: auto;
    }

        .Footercontent p {
            text-align: left;
            line-height: 25px;
            font-size: 1.1em;
        }

    .container {
        background-color: rgb(255, 255, 255);
    }

    .Title {
        font-size: 25px;
        margin-top: 0px;
        margin-bottom: 0px;
    }

    .display-field {
        line-height: 20px;
    }

    legend {
        margin-bottom: 0px;
    }

    .Eventlogo {
    }

    .header {
        border-bottom: 1px solid rgb(221, 221, 221);
        margin-top: 10px;
        border-left: 0px;
    }

   
</style>


<ul class="breadcrumb">

    <li class="breadcrum"><a href="~/newsAndEvents/Index"><b>News Events & Blogs</b></a><span class="divider" style="color:black"><b>></b></span></li>

    <li class="active" style="color:black"><b>Event Details</b></li>

</ul>

<div style="width: 98%; margin-top: 10px; margin-left: 2%;margin-bottom:10px">
    <h3>Event Details</h3>
    <div class="row-fluid">
        <div class="span3">

            <img src="~/Content/images/eventdetailsimage.png" />
        </div>
        <div class="span5">
            <div class="display-field" style="border:solid;height:227px">
                <div style="text-align:center">
                    @Html.DisplayName("Title") :<b> @Html.DisplayFor(model => model.EventsTitle)</b> <br />
                    @Html.DisplayNameFor(model => model.Language) : @Html.DisplayFor(model => model.Language)<br />
                    @Html.DisplayName("Type") : @Html.DisplayFor(model => model.EventsType.EventsTypeName)<br />
                   

                    @if(@Model.StartDate==@Model.EndDate){
                         @Html.DisplayName("Event Date(dd-mm-yyyy):") <b>  @Html.DisplayFor(x => x.StartDate)</b><br />
                    }
                    else{                   
                        @Html.DisplayName("Start Date(dd-mm-yyyy):")   @Html.DisplayFor(x => x.StartDate)<br />
                        @Html.DisplayName("End Date(dd-mm-yyyy):")  @Html.DisplayFor(x => x.EndDate)<br />
                    }
                    @Html.DisplayNameFor(model => model.Time) : @Html.DisplayFor(model => model.Time)<br />
                    @Html.DisplayNameFor(model => model.Venue) : @Html.DisplayFor(model => model.Venue)<br />
                    @Html.DisplayNameFor(model => model.Address) : @Html.DisplayFor(model => model.Address)<br />
                    @Html.DisplayNameFor(model => model.PostCode) : @Html.DisplayFor(model => model.PostCode)<br />
                    @Html.DisplayName("Phone") : @Html.DisplayFor(model => model.OrgPhone)<br />
                </div>
            </div>

        </div>

    </div>
</div>
