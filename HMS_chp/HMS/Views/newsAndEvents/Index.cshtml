            <div>
                <h4 style="margin-left: 5px; color: #1605C6">
                    ARCHIVE HAJJ & 'UMRAH NEWS AND BLOGS
                </h4>
                <div class="eventborder">




                    @foreach (var item in Model.LstArchiveNews)
                    {
                        <div class="media eventobject">
