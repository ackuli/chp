<div style="width: 98%; margin-top: 10px; margin-left: 2%">
    <div class="row-fluid">
        <div class="span3">
            @{bool flag1 = false;
            <div class="row-fluid pre">
                <h4 style="margin-left: 5px; margin-top:0px; color:black">
                    UPCOMING EVENTS
                </h4>

                @if (@Model.EventsList.ToList().Count == 1)
                {
                    if (@Model.EventsList.ToList().FirstOrDefault().IsDefault == true)
                    {
                        flag1 = true;
                        <div class="row-fluid eventobject" id="latestevents">

                            <div class="span12">
                                <p style="font-size:large;text-align:center"> @Model.EventsList.ToList().FirstOrDefault().EventsTitle</p>
                            </div>
                        </div>
                    }
                }
                @if (!flag1)
                {


                    foreach (var item in Model.EventsList.ToList())
                    {


                        <div class="row-fluid eventobject" id="latestevents">
                            <div class="span4" style="margin-left: 0px">
                                <div id="fb-root"></div>

                                <div class="calendar-small">
                                    <span class="s-month">@item.EventsDate.ToString("MMM")</span>
                                    <span class="s-date">@item.EventsDate.Day</span>
                                    <span class="s-year">@item.EventsDate.Year</span>
                                </div>
                            </div>
                            <div class="span8 upcoomingEvents">
                                @if (@item.EventsTitle.Length > 20)
                                {


                                    @Html.ActionLink((@item.EventsTitle.Substring(0, 17)), "Details", "Events", new { id = item.EventsId }, null)<span>...</span><br />

                                }
                                else
                                {
                                    @Html.ActionLink(@item.EventsTitle, "Details", "Events", new { id = item.EventsId }, null)<br />
                                }

                                <span style="text-align:left"> @item.Venue</span><br />
                                <span style=""> @item.Address </span><br />
                            </div>
                        </div>
                    }
                }

                @if (!flag1)
                {
                    <div style="text-align:right">
                        <a class="btn  btn-primary button--medium  button--primary--Events " href="/Events/EventsList">More Events</a>
                    </div>
                }
            </div>
            }
